{% extends 'base.html.twig' %}

{% block title %}Listagem de produtos{% endblock %}

{% block body %}
    <h1>Listando produtos</h1>
    <hr>
    <div class="row">
        <div class="col-md-12 text-right">
            <a class="btn btn-primary btn-lg" href="{{ path('cadastrar_produto') }}">Adicionar Produto</a>
        </div>
    </div>
    <br>

    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="row">
            <div class="col-md-12 alert alert-success">
                {{ flashMessage }}
            </div>
        </div>
    {% endfor %}

    <table class='table table-striped table-hover mt-3'>
        <thead>
            <tr>
                <th>Cod</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for produto in produtos %}
                <tr>
                    <td>{{ produto.id }}</td>
                    <td>{{ produto.name }}</td>
                    <td>{{ produto.price|number_format(2,',','.') }}</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-warning" href=""><i class="fas fa-eye"></i></a>
                        <a class="btn btn-sm btn-success" href="{{ path('editar_produto', {'id': produto.id}) }}"><i class="fas fa-edit"></i></a>
                        <a class="btn btn-sm btn-danger" href=""><i class="fas fa-eraser"></i></a>
                    </td>

                </tr>       
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
